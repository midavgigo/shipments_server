#include "Square.h"
#include <cmath>

Square::Square():Quadrangle(1, 1, 1, 1){

}

// конструктор класса Square с параметрами, вызывает конструктор базового класса Quadrangle
Square::Square(double a) : Quadrangle(a, a, a, a) {
}
// деструктор класса Square
Square::~Square() {
}
 //перегруженная функция установки значений сторон
void Square::set(int i, double v) {
    dim[0] = dim[1] = dim[2] = dim[3] = v;
}

double Square::S(){ // перегруженная функция вычисления площади
    return dim[0]*dim[0];//возврат площади квадрата
}

double Square::P() {//перегруженная функция вычисления периметра
    return 4 * dim[0];//возврат периметра
}

double Square::getRadius_big(){//перегруженная ф-ция вычисления  радиуса описанной окружности
    return dim[0] * pow(2, 0.5) / 2.0; //возрат радиуса описанной окружности
}

double Square::getRadius_little(){// функция вычисления радиуса вписанной окружности
    return dim[0] / 2.0;// возврат радиуса вписанной окружности в квадрат
}